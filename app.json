{
  "expo": {
    "name": "Wandar",
    "slug": "wandar",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#202020"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "infoPlist": {
        "NSDocumentDirectoryUsageDescription": "$(PRODUCT_NAME) would like access to your documents",
        "NSFileProviderDomainUsageDescription": "$(PRODUCT_NAME) would like to use your file provider storage"
      },
      "supportsTablet": true
    },
    "android": {
      "permissions": ["android.permission.READ_EXTERNAL_STORAGE", "android.permission.WRITE_EXTERNAL_STORAGE"],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Wandar to access your photos.",
          "savePhotosPermission": "Allow Wandar to save photos.",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ]
  }
}
